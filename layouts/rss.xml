<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ with .Title | markdownify }}{{.}} sur {{ end }}{{ .Site.Title }}</title>
    <link>{{ .Permalink }}</link>
    <description>Publications récentes {{ with .Title | markdownify }}dans {{.}} {{ end }}sur {{ .Site.Title }}</description>
    <language>fr-fr</language>
    <copyright>Copyright (c) Aurélien Berra.</copyright>
    <lastBuildDate>{{ .Now.Format "Mon, 02 Jan 2006 15:04:05 MST" }}</lastBuildDate>
    <atom:link href="{{.URL}}" rel="self" type="application/rss+xml" />
    {{ range first 15 .Data.Pages }}
    <item>
      <title>{{ .Title | markdownify }}</title>
      <link>{{ .Permalink }}</link>
      <author>aurelien.berra@u-paris10.fr</author>
      <pubDate>{{ .Date.Format "2006-01-02" | safeHTML }} </pubDate>
      <author>Aurélien Berra</author>
      <guid>{{ .Permalink }}</guid>
      <description>{{ .Content | html }}</description>
    </item>
    {{ end }}
  </channel>
</rss>

